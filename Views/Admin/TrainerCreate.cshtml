@model Management_app.Models.Main_data.Administrator
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@Html.ActionLink("Back to Index", "Index", "Admin", null, new { @class = "btn btn-danger" })

@using (@Html.BeginForm("Create", "Admin", "POST"))
{
    <div class="form-group-lg">
        @Html.LabelFor(m => m.ID, new { @class = "text-control" })
        @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
    </div>
    <div class="form-group-lg">
        @Html.LabelFor(m => m.Name, new { @class = "text-control" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group-lg">
        @Html.LabelFor(m => m.Address, new { @class = "text-control" })
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Task</button>
    </div>
}

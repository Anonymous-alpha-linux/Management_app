@model IEnumerable<Management_app.Models.ApplicationUser>
    @{
        ViewBag.Title = "StaffAccountView";
    }

    <h2>StaffAccountView</h2>
    <br/>
    @Html.ActionLink("Create new user", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">User Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">Role</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td scope="row">@item.Id</td>
                <td scope="row">@item.UserName</td>
                <td scope="row">@item.Email</td>
                <td scope="row">@item.PasswordHash</td>
                <td scope="row">@item.Role</td>
                <td scope="row">
                    @Html.ActionLink("Delete", "DeleteStaffAccount", "Admin", new { @id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit", "EditStaffAccount", "Admin", new { @id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
            }
        </tbody>
    </table>
